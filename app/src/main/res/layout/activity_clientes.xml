    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fitsSystemWindows="true"
            android:translationY="0dp">
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar3"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/yellow_4"
                app:titleTextColor="@color/white"
                app:title="Clientes"
                app:layout_scrollFlags="scroll">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/lyPopUpAddclintes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:orientation="vertical"
            android:gravity="center|center"
            android:background="@color/yellow_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:text="A単adir Clientes">
            </TextView>

            <EditText
                android:id="@+id/etNombreCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre "
                android:layout_margin="10dp"
                android:inputType="text">
            </EditText>
            <EditText
                android:id="@+id/etGmailCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gmail"
                android:inputType="text"
                android:layout_margin="10dp">
            </EditText>
            <EditText
                android:inputType="text"
                android:id="@+id/etDireccionCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion"
                android:layout_margin="10dp">
            </EditText>
            <EditText
                android:id="@+id/etTelefonoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono"
                android:layout_margin="10dp">
            </EditText>
            <EditText
                android:id="@+id/etTelefonoEmpresaCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono del Negocio "
                android:layout_margin="10dp">
            </EditText>
            <EditText
                android:id="@+id/etLimiteCreditoliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Limite de Credito"
                android:layout_margin="10dp">
            </EditText>
            <Button
                android:onClick="a単adirCliente"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:drawable/btn_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar">

            </Button>
        </LinearLayout>
