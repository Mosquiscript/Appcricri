                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="Home">

                </TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>



